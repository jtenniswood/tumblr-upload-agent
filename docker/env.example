# TUMBLR CREDENTIALS
CONSUMER_KEY=your_tumblr_consumer_key
CONSUMER_SECRET=your_tumblr_consumer_secret
OAUTH_TOKEN=your_tumblr_oauth_token
OAUTH_SECRET=your_tumblr_oauth_secret
BLOG_NAME=your_blog_name.tumblr.com

# POST_STATE options: 'published', 'queue', 'draft', 'private'
POST_STATE=queue

# FILE WATCHING CONFIGURATION
BASE_UPLOAD_FOLDER=./data/upload
AUTO_DISCOVER_CATEGORIES=true
CATEGORIES=Category1,Category2,Category3
FILE_EXTENSIONS=.jpg,.jpeg,.png,.gif,.webp,.avif,.bmp,.tiff,.tif
POLLING_INTERVAL=1.0

# IMAGE ANALYSIS
ENABLE_IMAGE_ANALYSIS=true
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-2.0-flash-lite
GEMINI_PROMPT="Describe this image in 1-2 concise sentences. Focus on the visual elements and describe what is in the image, not any text it contains. Keep it brief and clear. Do not state Here is a description of the image."
DESCRIPTION_APPEND_TEXT="optional text to append to the description"

# IMAGE CONVERSION
ENABLE_IMAGE_CONVERSION=true
CONVERSION_QUALITY=95
KEEP_ORIGINAL_AFTER_CONVERSION=false
CONVERT_FORMATS=.avif,.bmp,.tiff,.tif

# FILE MANAGEMENT
FAILED_UPLOAD_BASE=./data/failed
CLEANUP_AFTER_DAYS=30

# RATE LIMITING
UPLOAD_DELAY=5.0
MAX_UPLOADS_PER_HOUR=100
MAX_UPLOADS_PER_DAY=1000
BURST_LIMIT=5

# MONITORING
LOG_LEVEL=INFO
ENABLE_TRACING=true
HEALTH_CHECK_INTERVAL=30.0
HUMAN_READABLE_LOGS=true

# NOTIFICATIONS
ENABLE_NOTIFICATIONS=false

# ORCHESTRATOR SETTINGS
AGENT_ID=orchestrator
MAX_CONCURRENT_UPLOADS=3
RETRY_ATTEMPTS=3
RETRY_DELAY=10.0
